{
  "manifest_version": 3,
  "name": "Font Inspector",
  "version": "1.1",
  "description": "查看并复制网页字体的样式 (Font, Size, Color)",
  "permissions": [
    "activeTab", 
    "storage" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}